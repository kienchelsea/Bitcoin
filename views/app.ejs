<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
</head>

<body>
    <form id="form-price" action="btc-price" method="POST">
    <div class="coitainer">
        <div class="header">
            <h1 class="warning">THÊM CẢNH BÁO</h1>
            <h3>Coin</h3>
            <select name="coinType" class="select">
                <option selected></option>
                <option value="BTC/USDT">BTC/USDT</option>
                <option value="BAKE/USDT">BAKE/USDT</option>
            </select>
            <!-- <div class="currentPrice">
                <h3>Giá hiện tại</h3>
                <p>BAKE/USDT = 4</p>
            </div> -->
        </div>
        <div class="content">
            <h2>Cài đặt giá</h2>
            <div class="find">
                <div class="button">
                    <input type="radio" name="increase/decrease" value="increase">Tăng</input>
                    <input type="radio" name="increase/decrease" value="decrease">Giảm</input>
                </div>
                <div class="filter">
                    <input onchange="checkData()" id='number' name = "number" type="text" placeholder="Giá trị tăng Giảm">
                </div>
                <div class="filter calendar">
                    <input onchange="checkData()" id='percent' name="percen" type="text" placeholder="Đơn vị">
                </div>
                <div class="filter calendar">
                    <select name="hour" aria-placeholder="Trong khoảng">
                        <option selected></option>
                        <option value="15">15 phút</option>
                        <option value="60">1 giờ</option>
                        <option value="120">2 giờ</option>
                        <option value="240">4 giờ</option>
                        <option value="720">12 giờ</option>
                        <option value="1400">24 giờ</option>
                    </select>
                </div>
            </div>

            <input checked='false' style="display: none;" type="checkbox" name="checkNotify" id="checkNotify" />

            <div class="footer">
                <h2>Thông báo tới</h2>
                <div class="tele">
                    <input name = "Telename"type="text" placeholder="Gõ tên tại đây">
                </div>
                <div class="onclick">
                    <button name="resufe" type="reset">Hủy</button>
                    <button name = "Successful"type = "submit" id = "demo" onclick="myFunction()">Lưu</button>
                </div>
            </div>
        </form>
        <script>
            function myFunction() {
                alert("Thông tin đã lưu thành công");
            }
        </script>
</body>

<script>

    function checkData() {
        var number = 0;
        var percent = 0;
        var perc = document.getElementById('percent').value;
        var num = document.getElementById('number').value;  
        if (num.trim() == '') {             // check giá trị có chưa? ví dụ nhập nguyên dấu cách là chưa có. .trim() là hàm loại bỏ dấu cách ở 2 đầu của chuỗi.
            number = 0                      // Nếu chưa có giá trị thì set = 0 để tính toán.
        } else {
            number = parseInt(num);         // Có giá trị thì convert về kiểu số nguyên.
        }
        if (perc.trim() == '') {            // Tương tự trên.
            percent = 0;
        } else {
            percent = parseInt(perc.replace("%", ""));      // Xóa kí tự % khi người dùng nhập 15% thì giá trị sẽ là 15.
        }
        if ((number - percent) > 0)             // Check x > y đúng thì set giá trị của trường checkNotify = true. sai thì = false.
        {
            document.getElementById('checkNotify').checked = true;
        } else {
            document.getElementById('checkNotify').checked = false;
        }
    }

</script>

</html>