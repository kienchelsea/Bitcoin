    <div class="coitainer">
        <div class="header">
            <h1 class="warning">THÊM CẢNH BÁO</h1>
            <h3>Coin</h3>
            <select name="coinType" class="select">
                <option selected></option>
                <option  value="BTC/USDT">BTC/USDT</option>
                <option value="BAKE/USDT">BAKE/USDT</option>
            </select>
